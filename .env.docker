# Docker Environment Configuration
# Copy to .env and customize for your deployment

NODE_ENV=production
PORT=3000

# Database (internal Docker network)
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=express_db
DB_PORT=5432

# JWT (REQUIRED - generate a secure secret)
# Generate with: openssl rand -hex 64
JWT_SECRET=CHANGE_ME_TO_A_SECURE_SECRET
JWT_ISSUER=express-api
JWT_AUDIENCE=express-api-client
JWT_ACCESS_EXPIRATION=15m

# App
APP_URL=http://localhost:3000
GRACEFUL_SHUTDOWN_TIMEOUT_MS=10000

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth
AUTH_REFRESH_TOKEN_EXPIRES_DAYS=7
AUTH_EMAIL_TOKEN_EXPIRES_MINUTES=1440
AUTH_PASSWORD_RESET_TOKEN_EXPIRES_MINUTES=60
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCK_DURATION_MINUTES=15

# Logging
LOG_LEVEL=info

# Mail (optional, leave empty if not used)
MAIL_HOST=
MAIL_PORT=
